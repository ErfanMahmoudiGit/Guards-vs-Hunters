<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="700.0" prefWidth="1100.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.NewGameMenuController">
   <children>
      <ImageView fitHeight="700.0" fitWidth="1167.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../Images/backGround.jpg" />
         </image>
      </ImageView>
      <Button fx:id="start_easy_game" layoutX="526.0" layoutY="100.0" mnemonicParsing="false" onAction="#startEasyGame" text="Easy" textFill="#c30909">
         <font>
            <Font size="20.0" />
         </font></Button>
      <Button fx:id="start_normal_game" layoutX="514.0" layoutY="160.0" mnemonicParsing="false" onAction="#startNormalGame" text="Normal" textFill="#c30909">
         <font>
            <Font size="20.0" />
         </font></Button>
      <Button fx:id="start_hard_game" layoutX="524.0" layoutY="220.0" mnemonicParsing="false" onAction="#startHardGame" text="Hard" textFill="#c30909">
         <font>
            <Font size="20.0" />
         </font></Button>
      <Button fx:id="exit_game_button" layoutX="532.0" layoutY="280.0" mnemonicParsing="false" onAction="#exit" text="Exit" textFill="#c30909">
         <font>
            <Font size="20.0" />
         </font></Button>
      <Button fx:id="main_menu" layoutX="460.0" layoutY="340.0" mnemonicParsing="false" onAction="#mainMenu" text="Back To Main Menu" textFill="#c30909">
         <font>
            <Font size="20.0" />
         </font></Button>
      <Text layoutX="379.0" layoutY="73.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Please Choose Game's Difficulty">
         <font>
            <Font size="26.0" />
         </font>
      </Text>
   </children>
</AnchorPane>
